{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "react",
      "react-dom"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/Header/index.jsx",
    "src/app/Empleado/index.jsx",
    "src/app/Promo/index.jsx",
    "src/app/Recipiente/index.jsx",
    "src/app/Inventario/page.jsx"
, "src/components/vista-carrito/index.jsx", "src/components/vista-carrito/index.jsx"  ],
  
  "exclude": [
    "node_modules"
  ]
}
